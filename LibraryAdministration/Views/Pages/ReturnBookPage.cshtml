@model LibraryAdministration.Models.DTO.BookDTO.BookReaderDTO
@if (TempData["IncorrectInput"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["IncorrectInput"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>


    <script>
            setTimeout(function () {
            window.location.href = '@Url.Action("ReturnBookPage", "Book")';
        }, 10000);
    </script>
}
@if (TempData["BookIsInLibrary"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["BookIsInLibrary"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>


    <script>
            setTimeout(function () {
            window.location.href = '@Url.Action("ReturnBookPage", "Book")';
        }, 10000);
    </script>
}
<!--NavBar-->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Book" asp-action="Index">
            <img src="~/images/logo.png" alt="Library Logo" width="30" class="d-inline-block align-text-top">
            LibraryAdministration
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="Index">Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reader" asp-action="Index">Readers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="TakeBookPage">Take Book</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" class="nav-link" asp-controller="Book" asp-action="ReturnBookPage">Return Book</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!--ReturnBookForm-->
<div class="container mt-5">
    <h3>Return book to the library</h3>

    <form asp-controller="Book" asp-action="ReturnBook" method="post" onsubmit="return confirm('Are you sure to return this book to the library?');">
        <div class="form-group">
            <label class="control-label">Book ID</label>
            <input asp-for="BookId" class="form-control" min="1" step="1" placeholder="Enter Book ID" required />
            <span asp-validation-for="BookId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Reader ID</label>
            <input asp-for="ReaderId" class="form-control" min="1" step="1" placeholder="Enter Reader ID" required />
            <span asp-validation-for="ReaderId" class="text-danger"></span>
        </div>

        <button  type="submit" class="btn btn-primary">Confirm Return</button>
    </form>
</div>
