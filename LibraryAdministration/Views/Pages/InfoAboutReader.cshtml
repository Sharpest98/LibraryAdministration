@model LibraryAdministration.Models.DTO.ReaderDTO.ReaderInfoDTO
@{
    var bookCount = Model.ListOfBooks.Count;
}
@{
    ViewData["Title"] = "Library Administration";
}
@if (TempData["ImpossibleToDeleteReader"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["ImpossibleToDeleteReader"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>


    <script>
        setTimeout(function () {

        }, 3000);
    </script>
}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Book" asp-action="Index">
            <img src="~/images/logo.png" alt="Library Logo" width="30" class="d-inline-block align-text-top">
            LibraryAdministration
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="Index">Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page"  asp-controller="Reader" asp-action="Index">Readers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="TakeBookPage">Take Book</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="ReturnBookPage">Return Book</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!--InformationAboutReaderBlock-->
<div class="card mt-5">
    <div class="card-header text-white bg-dark border-dark">
        <h3>Information About Reader</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td><strong>ReaderId</strong></td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td><strong>First Name</strong></td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td><strong>Last Name</strong></td>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <td><strong>Address</strong></td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td><strong>PhoneNumber</strong></td>
                    <td>@Model.PhoneNumber</td>
                </tr>                
            </tbody>
        </table>
        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Reader" asp-action="UpdateReaderPage" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>
            <form asp-controller="Reader" asp-action="DeleteReader" asp-route-id="@Model.Id"  onsubmit="return confirm('Are you sure you want to delete this book?');">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<!--TakenBookCard-->
<div class="card-header text-white bg-dark border-dark">
    <h3>Taken books from the library: @bookCount</h3>
</div>

<table class="table table-striped table-bordered" id="bookTable">
    
    <thead class="table-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Author</th>
            <th scope="col">Title</th>
            <th scope="col">Release Year</th>
            <th scope="col">Genre</th>
            <th scope="col">Return</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.ListOfBooks!)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Author</td>
                <td>@book.Title</td>
                <td>@book.ReleaseYear</td>
                <td>@book.Genre</td>
                <td>
                    <form asp-controller="Book" asp-action="ReturnBook" asp-route-BookId="@book.Id" asp-route-ReaderId="@Model.Id" onsubmit="return confirm('Are you sure to return this book to the library?');">
                        <button type="submit" class="btn btn-danger">Return</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
