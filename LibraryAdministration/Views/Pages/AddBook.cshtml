@model LibraryAdministration.Models.DTO.BookDTO.CreateBookDTO

@{
    ViewData["Title"] = "Adding book";
}
<!--NavBar-->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Book" asp-action="Index">
            <img src="~/images/logo.png" alt="Library Logo" width="30" class="d-inline-block align-text-top">
            LibraryAdministration
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-controller="Book" asp-action="Index">Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reader" asp-action="Index">Readers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="TakeBookPage">Take Book</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="ReturnBookPage">Return Book</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!--AddBookForm-->
<div class="container mt-5">
    <h2 >@ViewData["Title"]</h2>

    <form asp-controller="Book" asp-action="CreateBook" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
            <input asp-for="Title" type="text" minlength="4" maxlength="20" placeholder="Book Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Author" class="control-label">Author</label>
            <input asp-for="Author" type="text" minlength="4" maxlength="20" placeholder="Book Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReleaseYear" class="control-label">Year of release</label>
            <select id="ReleaseYear" name="ReleaseYear" class="form-control" required>
                <option value="">Select Year</option>
                @for (var year = 2024; year >= 1900; year--)
                {
                    <option value="@year">@year</option>
                }
            </select>
        
            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre" class="control-label">Genre</label>
            <input asp-for="Genre" type="text" minlength="4" maxlength="20" placeholder="Genre of the Book" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
