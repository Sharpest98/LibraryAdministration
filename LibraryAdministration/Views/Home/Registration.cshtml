@model LibraryAdministration.Models.DTO.AccountDTO.LibraryAdministratorDTO

@if (TempData["UserNameAlreadyExists"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["UserNameAlreadyExists"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>


    <script>
        setTimeout(function () {

        }, 100000);
    </script>
}
@{
    ViewData["Title"] = "Home";
}


<section class="py-3 py-md-5" id="signupReg">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="card border border-light-subtle rounded-3 shadow-sm">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="text-center mb-3">
                <h3 class="float-md-none">LibraryAdministrator</h3>
              <a asp-controller="LibraryAdministrator" asp-action="LoginPage">
                <img src="~/images/logo2.png"  width="157" height="133">
              </a>
            </div>
            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Enter your details to register</h2>
            <form asp-action="Registration" runat="server">
              <div class="row gy-2 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="text" asp-for="UserName" class="form-control" id="firstName" placeholder="UserName" minlength="4" maxlength="20" required>
                    <label for="UserName" class="form-label">UserName</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="text" asp-for="Name" class="form-control" minlength="4" maxlength="20" placeholder="FirstName" required>
                    <label for="FirstName" class="form-label">FirstName</label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="text" asp-for="LastName" class="form-control" minlength="4" maxlength="20" placeholder="LastName" required>
                    <label for="LastName" class="form-label">LastName</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="password" asp-for="Password" name="pass" class="form-control" minlength="4" maxlength="20" value="" placeholder="Password" required>
                    <label for="password" class="form-label">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid my-3">
                    <button asp-controller="LibraryAdministrator" asp-action="Registration" class="btn btn-primary btn-lg" type="submit">Sign up</button>
                  </div>
                </div>
                <div class="col-12">
                <p class="m-0 text-secondary text-center">Already have an account? <a asp-controller="LibraryAdministrator" asp-action="Index" class="link-primary text-decoration-none">Sign in</a></p>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
